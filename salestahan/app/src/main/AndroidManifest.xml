            android:name="com.ucu.salastahan.ui.SaleProductCatalog"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ucu.salastahan.ui.sale.SaleLedgerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="org.achartengine.GraphicalActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ucu.salastahan.ui.sale.SaleDetailActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>